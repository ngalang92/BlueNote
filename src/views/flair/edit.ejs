<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
     <main class="container">
       <h1>Edit Flair</h1>
       <form action="/topics/<%= flair.topicId %>/flair/<%= flair.id %>/update" method="post">
        <div class="form-group">
          <label for="name">Flair name</label>
          <input value="<%= flair.name %>" type="text" class="form-control" name="name" aria-describedby="titleHelp" placeholder="Enter Name">
        </div>
        <div class="form-group">
          <label for="color">Flair color</label>
          <textarea rows="4" class="form-control" name="color" placeholder="Enter Color"><%= flair.color %></textarea>
        </div>
        <a href="/topics/<%= flair.topicId %>/flair/<%= flair.id %>" class="btn btn-primary">Cancel</a>
        <button type="submit" class="btn btn-success">Update</button>
      </form>
    </main>
     <% include ../static/partials/baseScripts.ejs %>
   </body>
</html>
